<script>
	$(function ()
	{
		$(document).on("change", "input[type='checkbox']", function ()
		{
			if ($(this).prop("checked"))
			{
			
				$(this).val(1);
			}
			else
			{
			   
				$(this).val(0);
			}
		});

		$(document).on("change", "input[type='radio']", function ()
		{
			if ($(this).prop("checked"))
			{
				$(this).val(1);
			}
			else
			{
				$(this).val(0);
			}
		});
	});


</script>