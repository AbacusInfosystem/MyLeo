@model MyLeoRetailer.Models.PreLogin.LoginViewModel
@using MyLeoRetailerInfo.Common; 
@{
    Layout = null;
}
 
<link href="~/Content/Atlant/css/theme-default.css" rel="stylesheet" />
<style>
    .header_luxe {
        margin-top: 50px;
    }

        .header_luxe img {
            width: 25%;
            display: block;
            margin: 0 auto;
            padding: 22px 0;
        }
    option {
        background-color: #33414e;
    }
</style>


<html>
<head>
    <meta charset="UTF-8">
    <title>Login | MyLeo</title>
</head>
<body>

    <div class="login-container">

        <div class="login-box animated fadeInDown">
            @*<div class="login-logo"></div>*@
            <div class="login-body">
                <div class="login-title"><strong>Welcome</strong>, Please login</div>
                <form action="@Url.Action("Authenticate", "Login")" class="form-horizontal" method="post">
                    <div class="form-group">
                        <div class="col-md-12">
                            <select class="form-control select">
                                <option selected>Select Branch Name</option>
                                <option>Dadar</option>
                                <option>Andheri</option>
                                <option>Virar</option>
                                <option>Thane</option>
                                <option>All</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Username" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <a href="#" class="btn btn-link btn-block">Forgot your password?</a>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-info btn-block">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="login-footer">
                @*<div class="pull-left">
                    &copy; 2014 AppName
                </div>
                <div class="pull-right">
                    <a href="#">About</a> |
                    <a href="#">Privacy</a> |
                    <a href="#">Contact Us</a>
                </div>*@
            </div>
        </div>

    </div>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/index.js"></script>
    <script src="~/Scripts/ripple.js"></script>


    <script>
        $(function () {

            // Emptying the cookie on user login
            $("#btnLogin").click(function () {

                $.removeCookie('cart', { path: '/' });

            });

            $("#frmLogin").validate({
                rules: {

                    "Cookies.UserName": { required: true },

                    "Cookies.Password": { required: true },
                },
                messages: {

                    "Cookies.UserName": { required: "User Name is required field." },

                    "Cookies.Password": { required: "Password is required field." },

                }
            });

        });


    </script>

</body>
</html>