@model MyLeoRetailer.Models.ProductViewModel
@using MyLeoRetailerInfo.Common


<script src="~/Scripts/Modules/Product/_ProductPricing/Product_price_events.js"></script>
<script src="~/Scripts/Modules/Product/_ProductPricing/Product_price_methods.js"></script>
<script src="~/Scripts/Modules/Product/_ProductPricing/product_price_validation.js"></script>
<style type="text/css">
    .verticle {
        /*max-height: 150px;*/
        overflow-y: auto;
    }
</style>
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li class="active">Product Price</li>
</ul>

<div class="content-frame">
    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Product Price Management</h2>
        </div>
    </div>
</div>

<div class="page-content-wrap">
    <form role="form" id="frmProductColor">
        <div class="row">
            <div class="col-md-3">
                <div class="block">
                    <div class="row">
                        @*<div class="form-group">
                                <div class="form-group input-group color" data-color="rgb(255, 146, 180)" data-color-format="rgb" id="colorpicker">
                                    <input class="form-control" type="text" id="txtColourCode" name="Product.Colour_Code">
                                    <span class="input-group-addon"><i id="iRGBColor" style="background-color: rgb(154, 42, 77);"></i></span>
                                </div>
                            </div>*@
                        <div class="form-group auto-complete">
                            <div class="input-group">
                                <input type="text" class="form-control color-filter autocomplete-text" name="Filter.Color" id="txtColourName" placeholder="Enter color" data-table="Colour" data-col="Colour_ID,Colour_Name" data-headernames="Colour">
                                <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-search" style="color:#fff;" aria-hidden="true"></i></a></span>
                                <input type="hidden" id="hdnColourId" value="" name="Filter.Color" class="auto-complete-value" />
                                <input type="hidden" id="hdnColourName" value="" name="Filter.Color" class="auto-complete-label" />
                            </div>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-success active" type="button" id="btnAddColour">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <form role="form" id="frmProductMRP">
        <input type="hidden" id="hdn_ProductId" name="Product.Product_Id" class="auto-complete-value" value="@Model.Product.Product_Id" />

        @*<input type="text" id="hdn_ProductMRPId" name="ProductMRPs[i].Product_MRP_Id" class="ProductMRPs" value="@Model.ProductMRPs[i].Product_MRP_Id" />
            <input type="text" id="hdn_ColourId" name="ProductMRPs[i].Product_MRP_Id" class="ProductMRPs" value="@Model.ProductMRPs[i].Colour_Id" />
            <input type="text" id="hdn_ColourName" name="ProductMRPs[i].Product_MRP_Id" class="ProductMRPs" value="@Model.ProductMRPs[i].Colour" />*@


        <div class="row">
            <div class="col-md-3 verticle" style="background: rgba(0, 0, 0, 0.02); border-right: 1px solid #DDD;  height: 362px;">
                <div class="block">
                    <div class="row">
                        <div class="list-group border-bottom push-down-20 color-expand" id="Color_Grid">
                            @{
                                int i = 0;
                                if (Model.ProductMRPs.Count != 0)
                                {
                                    string Color_Ids = "", Colors = "", Vendor_Codes = "", Descriptions = "";
                                    foreach (var item in Model.ProductMRPs)
                                    {
                                        <a name="Color_List" class="list-group-item" href="#" id="@i" data-identity="@item.Colour_Id">@item.Colour</a>
                                        <input type="text" id="txtVendorCode_@item.Colour_Id" name="Vendor_Color_Code" value="@item.Vendor_Color_Code" placeholder="Enter vendor code." class="form-control">//
                                        <input type="text" id="txtProductDesc_@item.Colour_Id" name="Product_Description" value="@item.Description" placeholder="product description." class="form-control">//
                                        Color_Ids += item.Colour_Id + ",";
                                        Colors += item.Colour + ",";
                                        Vendor_Codes += item.Vendor_Color_Code + ",";
                                        Descriptions += item.Description + ",";
                                        i++;
                                    }
                                    <input type="hidden" id="hdn_Color_Ids" name="Model.ProductMRPs" value="@(Color_Ids.TrimEnd(','))" placeholder="Enter vendor code." class="form-control">
                                    <input type="hidden" id="hdn_Colors" name="Model.ProductMRPs" value="@(Colors.TrimEnd(','))" placeholder="Enter vendor code." class="form-control">//
                                    <input type="hidden" id="hdn_Vendor_Codes" name="Model.ProductMRPs" value="@(Vendor_Codes.TrimEnd(','))" placeholder="Enter vendor code." class="form-control">//
                                    <input type="hidden" id="hdn_Description" name="Model.ProductMRPs" value="@(Descriptions.TrimEnd(','))" placeholder="Enter vendor code." class="form-control">//
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div id="common_Product_MRP" class="col-md-9 commonProduct" style="padding: 10px; border-top: 1px solid #DDD;">

            </div>
        </div>

        <div class="row">
            <div class="col-md-12" style="background: rgba(0, 0, 0, 0.02);padding-left: 20px; padding-right:0px; padding-top: 20px; padding-bottom: 20px; margin-bottom: 15px; border-top: 1px solid #DDD; border-bottom: 1px solid #DDD;">

                <div class="btn-group">
                    <button class="btn btn-success active" id="btnProductSave">Save</button>
                    <button type="button" class="btn btn-danger active" onclick="location.href='@Url.Action("Search", "Product")'">Cancel</button>
                </div>
            </div>
        </div>
    </form>
</div>