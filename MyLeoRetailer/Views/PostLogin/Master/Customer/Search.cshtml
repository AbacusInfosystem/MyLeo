@model MyLeoRetailer.Models.CustomerViewModel


<script src="~/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Customer/search_customer_events.js"></script>
<script src="~/Scripts/Modules/Customer/search_customer_methods.js"></script>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li class="active">Customer Management</li>
</ul>
<!-- END BREADCRUMB -->

<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Customer Management</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <div class="row">

        <div class="col-md-12" style="padding-top: 20px; padding-left: 10px; padding-right: 10px;">

            <div class="block">

                <form role="form" id="frmCustomer">

                    <div class="row">

                        <div class="col-md-5">

                            <div class="form-group">
                                <input type="text" class="form-control" name="Filter.Customer_Name" placeholder="Enter customer name to search." />
                                <input type="hidden" id="hdnCustomer_Id" name="Customer.Customer_Id" value="@Model.Customer.Customer_Id">
                            </div>

                        </div>

                        <div class="col-md-5">

                            <div class="form-group">
                                <input type="text" class="form-control" name="Filter.Customer_Mobile1" placeholder="Enter customer mobile number to search." />
                            </div>

                        </div>

                        <div class="col-md-2" style="text-align: right; padding-top: 0px; padding-bottom: 0px; padding-right: 0px; padding-left: 0px;">

                            <div class="btn-group">
                                <button role="button" class="btn btn-success active" value="Create" id="btnCreateCustomer">Create</button>
                                <button class="btn btn-danger active" value="Edit" id="btnEditCustomer">Edit</button>
                            </div>

                        </div>

                    </div>

                </form>

            </div>

            
        </div>

        <div class="col-md-12" style="padding: 0px;" id="divDynamicTable">
                       
        </div>   

        <div class="col-md-12" style="padding: 0px;text-align:center;" id="divPager">

        </div>

    </div>

</div>
