@model MyLeoRetailer.Models.BranchViewModel


<script src="~/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Branch/search_Branch_events.js"></script>
<script src="~/Scripts/Modules/Branch/search_Branch_methods.js"></script>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li class="active">Branch Management</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Branch Management</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <div class="row">

        <div class="col-md-12" style="padding-top: 0px; padding-left: 10px; padding-right: 10px;">

            <div class="block">

                <form role="form" id="frmBranch">
                    
                    <div class="row">

                        <div class="col-md-5">

                            <div class="form-group">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">Branch name.</span>
                                <input type="text" class="form-control" name="Filter.Branch_Name" placeholder="Enter Branch name to search." />
                                <input type="hidden" id="hdnBranch_ID" name="Branch.Branch_ID" value="@Model.Branch.Branch_ID">
                            </div>

                        </div>

                        <div class="col-md-7" style="text-align: right; padding-top: 30px; padding-bottom: 0px; padding-right: 0px; padding-left: 0px;">

                            <div class="btn-group">
                                <button role="button" class="btn btn-success active" value="Create" id="btnCreateBranch">Create</button>
                                <button class="btn btn-danger active" role="button" value="Edit" id="btnEditBranch" style="display:none;">Edit</button>
                            </div>

                        </div>

                    </div>

                </form>

            </div>


        </div>

        <div class="col-md-12" style="padding: 0px;" id="divDynamicTable">

        </div>

        <div class="col-md-12" style="padding: 0px;text-align:center;" id="divBranchPager">

        </div>

    </div>

</div>
