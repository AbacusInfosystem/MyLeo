@model MyLeoRetailer.Models.EmployeeViewModel
@{
    
    ViewBag.Title = "ChangeBranch";
}
<script src="/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Employee/search_branch_byemployee_event.js"></script>
<script src="~/Scripts/Modules/Employee/search_branch_byemployee_method.js"></script>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li class="active">Change Branch</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Change Branch</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <div class="row">
         <input type="hidden" class="form-control" id="hdf_EmployeeId" name="Employee.Employee_Id" value="1" />

        <div class="col-md-4">
            <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Branch</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int counter = 0;}

                            @foreach (var result in Model.Employee_Branch_List)
                            {
                                
                            <tr>
                                <td>@result.Branch_Name</td>
                                <td><label class="check"><input type="checkbox" class="icheckbox" checked="checked" id="Employee-@result.Branch_Id" name="Employee_Branch_List[@counter].Is_Selected" value="true"/></label></td>
                            </tr>
                                @{counter++;}
                            }

