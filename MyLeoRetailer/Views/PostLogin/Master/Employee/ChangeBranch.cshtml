@model MyLeoRetailer.Models.EmployeeViewModel
@{
    
    ViewBag.Title = "ChangeBranch";
}
<script src="/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Employee/search_employee_event.js"></script>
<script src="~/Scripts/Modules/Employee/search_employee_method.js"></script>

<style>
    .switch span::after
    {
        width: 18px !important;
    }

    .switch span
    {
        width: 40px !important;
        height: 18px !important;
    }
</style>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li class="active">Change Branch</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Change Branch</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <form role="form" id="frmChangeBranch">

        <div class="row">
            <input type="hidden" class="form-control" id="hdf_EmployeeId" name="Employee.Employee_Id" value="@Model.Employee.Employee_Id" />

            <div class="col-md-4">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Branch</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int counter = 0;}

                            @foreach (var result in Model.Employee_Branch_List)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" id="EmployeeBranchId-@result.Branch_Id" name="Employee_Branch_List[@counter].Branch_Id" value="@result.Branch_Id" />
                                        <input type="hidden" id="EmployeeBranchNM-@result.Branch_Id" name="Employee_Branch_List[@counter].Branch_Name" value="@result.Branch_Name" />
                                        @result.Branch_Name</td>

                                    <td>
                                        <label class="switch">
                                            @if (@result.Is_Selected == 1)
                                            {
                                                <input type="checkbox" class="switch" checked="checked" id="Employee-@result.Branch_Id" name="Employee_Branch_List[@counter].Is_Selected" value="@result.Is_Selected.ToString()"/><span></span>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="switch"  id="Employee-@result.Branch_Id" name="Employee_Branch_List[@counter].Is_Selected" value="@result.Is_Selected.ToString()"/><span></span>
                                            }
                                        </label>
                                    </td>
                                </tr>
                                            ++@counter;
                            }
                            @*      <label class="switch">
                                                    <input type="checkbox" class="switch" value="1" checked/>
                                                    <span></span>
                                                </label> *@

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="col-md-12" style="background: rgba(0, 0, 0, 0.02); padding-left: 20px; padding-right: 0px; padding-top: 20px; padding-bottom: 20px; margin-bottom: 15px; border-top: 1px solid #DDD; border-bottom: 1px solid #DDD;">

            <div class="btn-group">
                <button type="button" class="btn btn-success active" id="btnSaveBranch">Save</button>
                @* <button type="reset" class="btn btn-danger active">Cancel</button>*@
            </div>
        </div>

    </form>

</div>
