@model MyLeoRetailer.Models.GiftVoucherViewModel

@{
    ViewBag.Title = "Print";
}

<script src="~/Scripts/Modules/PrintThis.js"></script>
<script src="~/Scripts/Modules/GiftVoucher/giftvoucher_event.js"></script>@*Added by vinod mane on 10/10/2016*@
<script type="text/javascript">
    $(document).ready(function () {
        //$('#btnPrint').click(function () {
        $('#Div_Print').printThis();
        //});
    });
</script>


<div class="content-wrapper">

    <div class="container-fluid">

        <form id="frmGiftVoucherPrint">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        @*@{Html.RenderPartial("_ServerMessage");}*@

                        @*<h3 class="view_invoice_body_header">
                                Sales Invoice
                            </h3>*@

                        <div class="box box-default" id="Div_Print">
                            <div class="box-body">
                                <input type="hidden" id="hdn_GiftVoucherId" value="@Model.GiftVoucher.Gift_Voucher_Id" name="GiftVoucher.Gift_Voucher_Id" />


                                <!-- title row -->
                                <!-- Table row -->
                                <div class="row">
                                    <div class="col-xs-12 table-responsive">
                                        <table class="table table-bordered">
                                            <tbody>
                                                <tr> 
                                                    <td>

                                                    </td>
                                                    <td style="text-align:center;">
                                                        <label for="txtStore_Name" style="color: #333; text-align:center;">Gift Voucher</label> 
                                                    </td>
                                                        <td>

                                                        </td>
                                                </tr>
                                                <tr>
                                                    <td >
                                                        <label for="txtStore_Name" style="color: #333" >Store Name</label>
                                                    </td>
                                                    <td></td>
                                                    <td style="text-align:right;">
                                                        <label for="txtTel" style="color: #333">Tel : 022 42778421</label>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <label for="txtGift_Voucher_No" style="color: #333" class="">Gift Voucher No :@Model.GiftVoucher.Gift_Voucher_No </label>
                                                    </td>
                                                    <td></td>
                                                    <td style="text-align:right;">
                                                        <label for="txtVoucher_Date" style="color: #333" class="">Voucher Date:@((Model.GiftVoucher.Gift_Voucher_Date == DateTime.MinValue ? "" : Model.GiftVoucher.Gift_Voucher_Date.ToString("MM-dd-yyyy")))</label>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label for="txtPerson_Name" style="color: #333" class="">Person Name: @Model.GiftVoucher.Person_Name</label>
                                                    </td>
                                                    <td></td>
                                                    <td style="text-align:right;">
                                                        <label for="txtVoucher_Expiry_Date" style="color: #333" class="">Voucher Expiry Date: @((Model.GiftVoucher.Gift_Voucher_Expiry_Date == DateTime.MinValue ? "" : Model.GiftVoucher.Gift_Voucher_Expiry_Date.ToString("MM-dd-yyyy")))</label>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label for="txtVoucher_Amount" style="color: #333" class="">Voucher Amount: @Model.GiftVoucher.Gift_Voucher_Amount</label>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- this row will not appear when printing -->

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="col-md-2">
                                    <button type="button" id="btnPrint" class="btn btn-default bg-orange">Print</button>
                                </div>

                                <div class="col-md-2">
                                    <a class="btn btn-default bg-blue" role="button" id="btnBack" href="@Url.Action("Index", "GiftVoucher")">Back</a>
                                    @*<button type="button" id="btnPrint" class="btn btn-default bg-orange">Print</button>*@
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>



