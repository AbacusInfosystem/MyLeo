@model MyLeoRetailer.Models.SubCategoryViewModel  

<script src="~/Scripts/Modules/Category/sub_category_methods.js"></script>
<script src="~/Scripts/Modules/Category/sub_category_events.js"></script>
<script src="~/Scripts/Modules/Category/sub_category_validation.js"></script>

<div class="block" style="margin-bottom:0px;">
    <h4 style="margin-top: 0px;">Create - Update sub category. <span class="label label-primary">@Model.SubCategory.Category</span></h4>
    <form role="form" id="frmSubCategory">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter sub category." name="SubCategory.Sub_Category" id="txtSub_Category" maxlength="50"/>
            <input type="hidden" name="SubCategory.Sub_Category_Id" />
            <input type="hidden" name="SubCategory.Category_Id" value="@Model.SubCategory.Category_Id" />
            <input type="hidden" name="Filter.Category_Id" value="@Model.SubCategory.Category_Id" />
            <input type="hidden" id="hdnSub_Category" />@*Added By Vinod Mane on 26/09/2016*@

        </div>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter sub category code." name="SubCategory.Sub_Category_Code" /> 
        </div>

        <div class="form-group" style="margin-bottom: 5px; float: right;">
            <span class="label label-primary label-form" style="margin-bottom: 1px;">Set active.</span>@* Added by Vinod mane on 19/09/2016*@
            <label class="switch">
                <input name="SubCategory.IsActive" value="1" checked type="checkbox" id="SubCateFlag">
                <span></span>
            </label>
        </div>

        <div style="padding-left: 0px; padding-top: 0px; padding-bottom: 20px; margin-bottom: 15px; border-bottom: 1px solid #DDD;">
            <div class="btn-group">
                <button type="button" class="btn btn-success active" id="btnSaveSubCategory">Save</button>
                <button type="reset" class="btn btn-danger active" id="btnResetSubCategory">Reset</button>
            </div>
        </div>

    </form>

        <h4 style="margin-top: 0px;">Sub category listing.</h4>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter size group to search" name="Filter.Sub_Category" />
        </div>

        <div class="list-group border-bottom push-down-20" id="SubCategory_Grid">
                   
        </div>

    </div>

<div class="row">
	<div class="col-md-12" style="padding: 0px;text-align:center;" id="divSubCategoryPager">
	</div>
</div>
