@model MyLeoRetailer.Models.ColorViewModel 
@{
    ViewBag.Title = "Index";
}

<script src="/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Color/color_events.js"></script>
<script src="~/Scripts/Modules/Color/color_methods.js"></script>
<script src="~/Scripts/Modules/Color/color_validation.js"></script>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li class="active">Color Management</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Color Management</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <div class="row" style="background: rgba(0, 0, 0, 0.02); ">

        <div class="col-md-6" style="background: rgba(0, 0, 0, 0.02); border-right: 1px solid #DDD; padding: 10px; height: 517px;">

            <div class="block" style="margin-bottom:0px;">
                <h4 style="margin-top: 0px;">Color listing.</h4>

                @*<div class="form-group">
                    <input type="text" class="form-control color-filter" name="Filter.Color" placeholder="Enter color to search" />
                </div>*@
                <input type="hidden" value="@Model.Color.IsActive" />
                <div class="form-group auto-complete">
                    <div class="input-group">
                        <input type="text" class="form-control color-filter autocomplete-text" name="Filter.Color" id="txtColor_Name" placeholder="Enter color to search" data-table="Colour" data-col="Colour_ID,Colour_Name" data-headernames="Colour">
                        <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-search" style="color:#fff;" aria-hidden="true"></i></a></span>
                        <input type="hidden" id="hdnColourId" value="" name="Filter.Color" class="auto-complete-value" />
                        <input type="hidden" id="hdnColourName" value="" name="Filter.Color" class="auto-complete-label" />
                        
                    </div>
                </div>

                <div class="list-group border-bottom push-down-20" id="Color_Grid">

                </div>

            </div>

            <div class="row">

                <div class="col-md-12" style="padding: 0px;text-align:center;" id="divColorPager">

                </div>

            </div>

        </div>

        <div class="col-md-6" style="padding: 10px; height: 517px;">

            <div class="block">
                <h4 style="margin-top: 0px;">Create - Update color.</h4>

                <form role="form" id="frmColor">
                    <div class="form-group">
                        @*<label>Create / Update size group:</label>*@
                        <input type="text" class="form-control" id="txtColour_Name" placeholder="Enter color name." name="Color.Colour" />
                        <input type="hidden" id="hdnColour_Name">@*Added By Vinod Mane on 23/09/2016*@
                        <input type="text" class="form-control" placeholder="Enter color name." name="Color.Colour" />
                        <input type="hidden" name="Color.Colour_Id">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter color code." name="Color.Color_Code" /> 
                    </div>

                    <div class="form-group">
                        <div class="form-group input-group color" data-color="rgb(255, 146, 180)" data-color-format="rgb" id="colorpicker">
                            <input class="form-control" type="text" name="Color.Colour_Code">
                            <span class="input-group-addon"><i id="iRGBColor" style="background-color: rgb(154, 42, 77);"></i></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6 col-sm-6 col-md-8" style="padding-left: 0px;">
                            <span class="label label-primary label-form" style="margin-bottom: 1px;">Set active.</span>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-4" style="text-align: right; padding-right: 0px;">
                            <label class="switch">
                                @if (Model.Color.IsActive == false)
                                {
                                    <input value="@Model.Color.IsActive.ToString()" name="Color.IsActive" type="checkbox">
                                }
                                else
                                {
                                    <input value="@Model.Color.IsActive.ToString()" name="Color.IsActive" checked="checked" type="checkbox">
                                }
                                @*<input type="hidden" value="@Model.Color.IsActive" />*@
                                <span></span>
                            </label>
                        </div>
                    </div>

                    <div style="padding-left: 0px; padding-top: 0px; padding-bottom: 20px; margin-bottom: 15px; border-bottom: 1px solid #DDD;">
                        <div class="btn-group">
                            <button class="btn btn-success active" id="btnSaveColor" type="button">Save</button>
                            <button type="reset" class="btn btn-danger active" id="btnReset">Cancel</button>
                        </div>
                    </div>

                </form>

            </div>

        </div>
    </div>

</div>
