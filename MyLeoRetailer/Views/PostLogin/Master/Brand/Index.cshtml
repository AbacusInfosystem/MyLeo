@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/Modules/common_methods.js"></script>
<script src="~/Scripts/Modules/Brand/brand_validation.js"></script>
<script src="~/Scripts/Modules/Brand/brand_methods.js"></script>
<script src="~/Scripts/Modules/Brand/brand_events.js"></script>

<!-- START BREADCRUMB -->
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li><a href="#">Home</a></li>
    <li><a href="#">Masters</a></li>
    <li class="active">Brand Management</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START CONTENT FRAME -->
<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Brand Management</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <div class="row" style="background: rgba(0, 0, 0, 0.02); height: 517px;">

        <div class="col-md-12" style="border-right: 1px solid #DDD; padding: 10px;">

            <div class="block" style="margin-bottom:0px;">
                <h4 style="margin-top: 0px;">Create - Update brand.</h4>

                <form role="form" id="frmBrand">

                    <div class="form-group" style="width:500px;">
                        <span class="label label-primary label-form" style="margin-bottom: 1px;">Brand name.</span>
                        @*<input type="text" class="form-control" placeholder="Enter brand." name="Brand.Brand_Name" />*@@*Commented By Vinod mane on 26/09/2016*@
                        <input type="text" class="form-control" placeholder="Enter brand." name="Brand.Brand_Name" id="txtBrand_Name" />@*Added By Vinod mane on 26/09/2016*@
                        <input type="hidden" id="hdnBrand_Name">
                        <input type="hidden" name="Brand.Brand_Id">
                    </div>

                    <div class="form-group" style="width:500px;">
                        <span class="label label-primary label-form" style="margin-bottom: 1px;">Brand Code.</span>
                        <input type="text" class="form-control" placeholder="Enter brand code." name="Brand.Brand_Code" />
                    </div>

                    <div class="form-group" style="margin-bottom: 5px; width:1110px; float: right;">
                        <label class="switch">
                            <input checked="" name="Brand.IsActive" value="0" type="checkbox" id="Flag">
                            <span></span>
                        </label>
                    </div>

                    <div style="padding-left: 0px; padding-top: 0px; padding-bottom: 20px; margin-bottom: 15px; border-bottom: 1px solid #DDD;">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success active" id="btnSaveBrand">Save</button>
                            <button type="reset" class="btn btn-danger active">Cancel</button>
                        </div>
                    </div>

                </form>

                <h4 style="margin-top: 0px;">Brand listing.</h4>

                @*Commented by vinod mane on 27/09/2016*@
                @*<div class="form-group" style="width:500px; margin-bottom: 5px; ">
                        <span class="label label-primary label-form" style="margin-bottom: 1px;">Brand name.</span>
                        <input type="text" class="form-control" name="Filter.Brand_Name" placeholder="Enter brand name to search" />
                    </div>*@

                @* LookUp Code Added by Vinod Mane on 27/09/2016*@
                <div class="form-group auto-complete" style="width:500px; margin-bottom: 5px; ">
                    <div class="input-group">
                        <span class="label label-primary label-form" style="margin-bottom: 1px;">Brand name.</span>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control color-filter autocomplete-text" name="Filter.Brand_Name" id="txtBrandName" placeholder="Enter brand name to search." data-table="Brand" data-col="Brand_ID,Brand_Name" data-headernames="Brand Name">
                        <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-search" style="color:#fff;" aria-hidden="true"></i></a></span>
                        @*<input type="hidden" id="hdnBrand_ID" name="Brand.Branch_ID" value="@Model.Brand.Branch_ID">
                            <input type="hidden" id="hdnBrand_ID" name="Brand.Branch_ID" />*@
                        <input type="hidden" id="hdnBrandID" value="" name="Filter.Brand_Name" class="auto-complete-value" />

                    </div>
                </div>
                @*End*@


                <div class="list-group border-bottom push-down-20" id="Brand_Grid">

                </div>

            </div>

            <div class="row">
                <div class="col-md-12" style="padding: 0px;text-align:center;" id="divBrandPager">

                </div>
            </div>

        </div>

    </div>

</div>
