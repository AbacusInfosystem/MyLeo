@model MyLeoRetailer.Models.Transaction.PurchaseOrderRequestViewModel

<div class="content-frame">

    <!-- START CONTENT FRAME TOP -->
    <div class="content-frame-top">
        <div class="page-title">
            <h2><span class="fa fa-image"></span>&nbsp;&nbsp; Purhase Order Requets Management</h2>
        </div>
    </div>

</div>
<!-- END CONTENT FRAME -->

<div class="page-content-wrap">

    <form role="form" id="frmPurchaseOrderRequestRequest">

        <div class="row">

            <div class="col-md-3" style="background: rgba(0, 0, 0, 0.02); border-bottom: 1px solid #DDD; padding: 10px; height: 80px;">

                <div class="block">

                    <input type="hidden" class="form-control input-sm" name="PurchaseOrderRequest.Purchase_Order_Request_Id" id="hdf_Purchase_Order_Request_Id" value="@Model.PurchaseOrderRequest.Purchase_Order_Request_Id" />

                    <div class="form-group">
                        <label class="control-label" style="color: #33414e">Vendor Name.</label>
                        <span class="label label-primary label-form label-read" style="margin-bottom: 1px;">@Model.PurchaseOrderRequest.Vendor_Name</span>
                        @*<input type="text" class="form-control input-sm" name="PurchaseOrderRequest.Vendor_Name" value="@Model.PurchaseOrderRequest.Vendor_Name" />*@
                    </div>

                </div>
            </div>

            <div class="col-md-3" style="background: rgba(0, 0, 0, 0.02); border-bottom: 1px solid #DDD; padding: 10px; height: 80px;">

                <div class="block">

                    <div class="form-group">
                        <label class="control-label" style="color: #33414e">Branch Name.</label>
                        <span class="label label-primary label-form label-read" style="margin-bottom: 1px;">@Model.PurchaseOrderRequest.Branch_Name</span>
                        @*<input type="text" class="form-control input-sm" name="PurchaseOrderRequest.Branch_Name" value="@Model.PurchaseOrderRequest.Branch_Name" />*@
                    </div>

                </div>
            </div>

            <div class="col-md-6" style="background: rgba(0, 0, 0, 0.02); border-bottom: 1px solid #DDD; padding: 10px; height: 80px;">

            </div>

        </div>


        <div class="row">
            <div class="block" style="background: rgba(0, 0, 0, 0.06); border-top: 1px solid #DDD; padding-top: 10px; padding-bottom:0; margin-bottom: 0; padding-left: 0; padding-right: 0;">
                <h4 style="border-bottom: 1px; width: 300px; line-height: 24px; margin-left: 18px;">Purchase Order Request Details</h4>

                <div class="col-xs-12 table-responsive">
                    <table class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th style="width:100px;">Article No.</th>
                                <th style="width:150px;">Color</th>
                                <th style="width:150px;">Brand</th>
                                <th style="width:150px;">Category</th>
                                <th style="width:150px;">Subcategory</th>
                                <th style="width:150px;">Size Group</th>
                                <th style="width:80px;">Start Size</th>
                                <th style="width:80px;">End Size</th>
                                <th style="width:80px;">1</th>
                                <th style="width:80px;">2</th>
                                <th style="width:80px;">3</th>
                                <th style="width:80px;">4</th>
                                <th style="width:80px;">5</th>
                                <th style="width:80px;">6</th>
                                <th style="width:80px;">7</th>
                                <th style="width:80px;">8</th>
                                <th style="width:80px;">9</th>
                                <th style="width:80px;">10</th>
                                <th style="width:80px;">11</th>
                                <th style="width:80px;">12</th>
                                <th style="width:80px;">13</th>
                                <th style="width:80px;">14</th>
                                <th style="width:80px;">15</th>
                                <th style="width:100px;">Total Qty.</th>
                                <th style="width:100px;">Center Size</th>
                                <th style="width:100px;">Base Rate</th>
                                <th style="width:100px;">Size Diff.</th>
                                <th style="width:100px;">Total Amt.</th>
                                <th style="width:auto;">Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                if (Model.PurchaseOrderRequest.PurchaseOrderRequestItems.Count > 0)
                                {

                                    foreach (var item in Model.PurchaseOrderRequest.PurchaseOrderRequestItems)
                                    {
                                        int colspan = 15;
                                        if (item.sizes.Count > 0)
                                        {
                                            colspan = colspan - item.sizes.Count;
                                            <tr style="background: rgba(74,77,67,0.09);">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                @foreach (var itm in item.sizes)
                                                {
                                                    <td>@itm.Size_Name</td>
                                                }

                                                <td colspan="@colspan"></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        }
                                        <tr>
                                            <td>@item.Article_No</td>
                                            <td>@item.Colour_Name</td>
                                            <td>@item.Brand_Name</td>
                                            <td>@item.Category</td>
                                            <td>@item.Sub_Category</td>
                                            <td>@item.Size_Group_Name</td>
                                            <td>@item.Start_Size</td>
                                            <td>@item.End_Size</td>


                                            @if (item.sizes.Count > 0)
                                            {
                                                foreach (var itm in item.sizes)
                                                {
                                                    <td>@itm.Quantity1</td>
                                                }
                                            }

                                            <td colspan="@colspan"></td>
                                            <td style="background: rgba(74,77,67,0.09);">@item.Total_Quantity</td>
                                            <td>@item.Center_Size</td>
                                            <td>@item.Purchase_Price</td>
                                            <td>@item.Size_Difference</td>
                                            <td style="background: rgba(74,77,67,0.09);">@item.Total_Amount</td>
                                            <td>@item.Comment</td>
                                        </tr>
                                    }
                                }
                                <tr></tr>
                            }

                            @{
                                <tr>
                                    <td colspan="23" style="text-align: right;"><span class="label label-primary label-form label-read" style="margin-bottom: 1px;">Total Quantity</span></td>
                                    <td style="text-align: left;"><span class="label label-primary label-form label-read" style="margin-bottom: 1px;">@Model.PurchaseOrderRequest.Total_Quantity</span></td>

                                    <td colspan="3" style="text-align: right;"><span class="label label-primary label-form label-read" style="margin-bottom: 1px;">Total Amount</span></td>
                                    <td style="text-align: left;"><span class="label label-primary label-form label-read" style="margin-bottom: 1px;">@Model.PurchaseOrderRequest.PurchaseOrderRequestItems.Sum(a => a.Total_Amount)</span></td>
                                    <td></td>                                    
                                </tr>

                            }
                        </tbody>
                    </table>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    </form>

</div>
