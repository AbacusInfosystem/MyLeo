                <form role="form" id="frmPurchaseReturnRequest">
                    <input type="hidden" id="hdnPurchase_Return_Request_Id" name="PurchaseReturnRequest.Purchase_Return_Request_Id" value="@Model.PurchaseReturnRequest.Purchase_Return_Request_Id"/>
