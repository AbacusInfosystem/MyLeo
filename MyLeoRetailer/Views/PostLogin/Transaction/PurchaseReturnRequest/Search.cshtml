                                        if (Model.PurchaseReturnRequest.Vendor_Id == item.Vendor_Id)
                                        {
                                            <option value="@item.Vendor_Id" selected="selected">@item.Vendor_Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Vendor_Id">@item.Vendor_Name</option>
                                        }
                                    }
                                </select>
                            </div>

                        </div>

                        <div class="col-md-9" style="text-align: right; padding-top: 25px; padding-bottom: 0px; padding-right: 0px; padding-left: 0px;">

                            <div class="btn-group">
                                <button type="button" class="btn btn-success active" value="Create" id="btnCreate">Create</button>
                                @*<a type="button" class="btn btn-success active" href="/purchase-return-request/create-purchase-return-request" id="btnCreate">Create</a>*@
                                <button type="button" disabled class="btn btn-danger active edit" value="Edit" id="btnView">View</button>
